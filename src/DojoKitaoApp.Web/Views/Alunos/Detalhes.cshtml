@model AlunoViewModel

@{
    ViewData["Title"] = "Detalhes do aluno";
}

<h2>@ViewData["Title"]</h2>

<div>
    <h3>Informações pessoais</h3>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.NomeCompleto)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NomeCompleto)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DataNascimento)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DataNascimento)
        </dd>
    </dl>
</div>
<div>
    <h3>Endereço</h3>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Endereco!.Logradouro)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Endereco!.Logradouro)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Endereco!.Numero)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Endereco!.Numero)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Endereco!.Complemento)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Endereco!.Complemento)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Endereco!.CEP)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Endereco!.CEP)
        </dd>
    </dl>
</div>

<div>
    @Html.ActionLink("Editar aluno", "Editar", "Alunos", new { Id = Model.Id }, new { @class = "btn btn-primary" }) |
    @Html.ActionLink("Editar endereço", "Editar", "Enderecos", new { Id = Model.Endereco!.Id }, new { @class = "btn btn-primary" }) |
    @Html.ActionLink("Voltar", "Index", "Alunos", null, new { @class = "btn btn-danger" })
</div>